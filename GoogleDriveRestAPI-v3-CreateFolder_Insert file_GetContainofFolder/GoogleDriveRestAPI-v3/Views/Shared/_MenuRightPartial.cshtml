@using ElearningSubject.Models
@{
    Users user = new Users();
    Users u = user.GetAll(Session["IDLogin"] +"").FirstOrDefault();
}
<ul class="navbar-nav ml-auto">
    <!-- Notifications Dropdown Menu -->
    <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="fas fa-user"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            <span class="dropdown-item dropdown-header" style="pointer-events:none;">Thiết lập thông tin</span>

            @if (u.Roles.Equals("1") || u.Roles.Equals("3"))
