                <div class="dropdown-divider"></div>
                <a href="/ManagerStudents/Index" class="dropdown-item">
                    <i class="fas fa-plus-circle"></i> Thêm sinh viên vào môn học
                </a>
            }

            @if (u.Roles.Equals("2"))
            {
                <div class="dropdown-divider"></div>
                <a href="/Accounts/Index" class="dropdown-item">
                    <i class="fas fa-tasks"></i> Quản lý giáo viên
                </a>
            }

            @if (u.Roles.Equals("3"))
            {
                <div class="dropdown-divider"></div>
