                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/Admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
