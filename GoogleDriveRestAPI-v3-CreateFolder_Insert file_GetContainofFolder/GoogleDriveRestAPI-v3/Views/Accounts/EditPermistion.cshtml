
@{
    ViewBag.Title = "Phân Quyền Giáo Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    input {
        cursor:pointer;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <h1>Chỉnh sửa thông tin</h1>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông Tin Giáo Viên</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" action="\Accounts\EditPermistion" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" name="ID" id="ID" value="@Model.ID">
                                </div>
                                <div class="form-group">
                                    <label for="Fullname">Tên: </label>
                                    <input type="text" readonly class="form-control" name="Fullname" id="Fullname" value="@Model.Fullname" placeholder="Tên quyền">
                                </div>
                                <div class="form-group">
                                    <label for="Email">Email: </label>
                                    <input type="text" readonly class="form-control" name="Email" id="Email" value="@Model.Email" placeholder="Tên quyền">
                                </div>
                                <div class="form-group">
                                    <label for="Name">Khoa</label>
                                    <input type="text" class="form-control" value="@Model.Department" readonly />
                                </div>
                                <div class="form-group">
                                    <select name="IDDepartment" id="IDDepartment" class="form-control">
                                        @foreach (var item in ViewBag.ListDepartment)
                                        {
                                            if (item.ID == Model.IDDepartment)
                                            {
                                                <option selected value="@item.ID">@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.ID">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Roles">Chức Vụ: </label><br />
                                    @foreach (var item in ViewBag.ListRoles)
                                    {
                                        if (@item.ID == Model.Roles)
                                        {    
                                            <span for="Roles">@item.Name </span>
                                            <input type="radio" name="Roles" value="@item.ID" checked/>
                                        }
                                        else
                                        {
                                            <span for="Roles">@item.Name </span>
                                            <input type="radio" name="Roles" value="@item.ID" />
                                        }
                                    }
                                </div>
                                <div class="form-group">

                                    @if (Model.Status)
                                    {
                                        <label for="Status">Tình trạng (Đang sử dụng): </label>
                                    }
                                    else
                                    {
                                        <label for="Status">Tình trạng (Đã xóa): </label>
                                    }
                                    <input id="Status" name="Status" type="checkbox" value="true" @(Model.Status ? "checked=\"checked\"" : "") />

                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
                <div class="col-md-3"></div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

