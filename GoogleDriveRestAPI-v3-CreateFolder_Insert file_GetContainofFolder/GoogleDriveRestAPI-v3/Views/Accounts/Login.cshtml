
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Đăng nhập để bắt đầu phiên làm việc của bạn</p>

        <form action="/Accounts/Login" method="post">
            <div class="input-group mb-3">
                <input type="email" class="form-control" name="username" id="username" placeholder="Tài khoản">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-7">
                    <div class="icheck-primary">
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-5">
                    <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <!-- /.social-auth-links -->
        <p class="mb-1">
            <a href="/Accounts/ForgotPassword">Quên mật khẩu</a>
        </p>
        <p class="mb-0">
            <a href="/Accounts/Register" class="text-center">Đăng ký</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>
