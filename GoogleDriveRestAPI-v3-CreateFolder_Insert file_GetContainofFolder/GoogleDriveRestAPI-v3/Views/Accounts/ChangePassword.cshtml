
@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Nhập mật khẩu mới.</p>

        <form action="/Accounts/ChangePassword" method="post">
            <div class="input-group mb-3">
                <input type="password" class="form-control" name="password0" id="password0" placeholder="Mật khẩu">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" name="password1" id="password1" placeholder="Nhập lại mật khẩu mới">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <p class="mt-3 mb-1">
            <a href="/Accounts/Login">Đăng Nhập</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>

