
@{
    ViewBag.Title = "Thay Đổi Thông Tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <h1>Chỉnh sửa thông tin</h1>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông Tin Tài Khoản</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" action="\Accounts\ChangeInfoAccount" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" name="ID" id="ID" value="@Model.ID">
                                </div>
                                <div class="form-group">
                                    <label for="Name">Tên: </label>
                                    <input type="text" class="form-control" name="Fullname" id="Fullname" value="@Model.Fullname" />
                                </div>
                                <div class="form-group">
                                    <label for="Name">Email: </label>
                                    <input type="text" class="form-control" name="Email" id="Email" value="@Model.Email" readonly />
                                </div>
                                <div class="form-group">
                                    <label for="Name">Ngày Tạo: </label>
                                    <input type="text" class="form-control" name="DateCreated" id="DateCreated" value="@string.Format("{0:dd/MM/yyyy}", Model.DateCreated)" readonly />
                                </div>
                                <div class="form-group">
                                    <label for="Name">Chức Vụ</label>
                                    <input type="text" class="form-control" name="RolesName" id="RolesName" value="@Model.RolesName" readonly placeholder="Tên đầy đủ"/>
                                </div>
                                <div class="form-group">
                                    <label for="Name">Khoa</label>
                                    <input type="text" class="form-control" value="@Model.Department" readonly />
                                    <input type="hidden" class="form-control" name="IDDepartment" id="IDDepartment" value="@Model.IDDepartment" readonly />
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
                <div class="col-md-3"></div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>