
@{
    ViewBag.Title = "Chỉnh sửa thông tin quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <h1>Chỉnh sửa thông tin</h1>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông Tin Quyền</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" action="\Roles\Edit" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" name="ID" id="ID" value="@Model.ID" placeholder="Tên quyền">
                                </div>
                                <div class="form-group">
                                    <label for="Name">Tên: </label>
                                    <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" placeholder="Tên quyền">
                                </div>
                                <div class="form-group">
                                    <label for="Description">Mô tả: </label>
                                    <textarea rows="4"  class="form-control" cols="50" name="Description" id="Description" placeholder="Mô tả">@Model.Description</textarea>
                                </div>
                                <div class="form-group">
                                    
                                    @if (Model.Status)
                                    {
                                        <label for="Status">Tình trạng (Đang sử dụng): </label>
                                        <input id="responsable" name="Status" type="checkbox" checked/>
                                    }
                                    else
                                    {
                                        <label for="Status">Tình trạng (Đã xóa): </label>
                                        <input id="responsable" name="Status" type="checkbox"/>
                                    }

                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
                <div class="col-md-3"></div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>