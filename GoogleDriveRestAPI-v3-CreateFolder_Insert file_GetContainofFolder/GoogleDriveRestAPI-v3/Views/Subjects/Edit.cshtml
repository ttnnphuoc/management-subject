
@{
    ViewBag.Title = "Chỉnh Sửa Môn Học " + ViewBag.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Error = ViewBag.Error;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <h1>Thông Tin </h1>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông Tin Môn Học</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" action="\Subjects\Edit" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="hidden" name="ID" id="ID" value="@Model.ID" />
                                    <label for="nameSubject">Tên Môn Học</label>
                                    <input type="text" class="form-control" value="@Model.Name" id="Name" name="Name" placeholder="Tên môn học">
                                </div>
                                <div class="form-group">
                                    <label for="Description">Mô tả: </label>
                                    <textarea rows="4" class="form-control" cols="50" name="Description" id="Description" placeholder="Mô tả">
                                        @Model.Description.ToString().Trim()
                                    </textarea>
                                </div>
                                <div class="form-group">
                                    @if (Model.Status == 1)
                                    {
                                        <label for="Status">Tình trạng (Đang sử dụng): </label>
                                    }
                                    else
                                    {
                                        <label for="Status">Tình trạng (Đã xóa): </label>
                                    }
                                    <input id="Status" name="Status" type="checkbox" value="true" @(Model.Status == 1 ? "checked=\"checked\"" : "") />

                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <a href="/Subjects/Index" class="btn btn-primary">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
                <div class="col-md-3"></div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

